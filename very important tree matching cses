#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int maxi;
int visited[1000000] = {0};
void dfs(int node, int par, vector<int>adj[])
{
    for(auto it : adj[node])
    {
        if(it!=par)
        {
            dfs(it,node,adj);
            if(!visited[it] && !visited[node])
            {
                maxi++;
                visited[node]=1;
                visited[it]=1;
            }
        }
    }
    return;
}
int main()
{
    int n,i,u,v;
    cin>>n;
    vector<int> adj[n+1];
    for(i=0;i<n-1;i++)
    {
        cin>>u>>v;
        adj[u].emplace_back(v);
        adj[v].emplace_back(u);
    }
    maxi=0;
    dfs(1,-1,adj);
    cout<<maxi<<"\n";
    return 0;
}
//eg input
5
1 2
1 3
3 4
3 5


output will be 2  one for pair (1,2) and one for pair (3,4)
