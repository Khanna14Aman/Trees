question==>https://codeforces.com/contest/734/problem/E
#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int maxinode=0;
int dist=0;
void dfs(int node, int par, vector<int>adj[], int lev, int a[])
{
    if(lev>dist)
    {
        dist=lev;
        maxinode=node;
    }
    for(auto it: adj[node])
    {
        if(it!=par)
        {
            dfs(it,node,adj,lev+(a[it]^a[node]),a);
        }
    }
}
int main()
{
    int n,i,u,v;
    cin>>n;
    vector<int>adj[n+1];
    int a[n+1];
    for(i=1;i<=n;i++)
    {
        cin>>a[i];
    }
    for(i=0;i<n-1;i++)
    {
        cin>>u>>v;
        adj[u].emplace_back(v);
        adj[v].emplace_back(u);
    }
    dfs(1,-1,adj,1,a);
    dfs(maxinode,-1,adj,1,a);
    cout<<dist/2<<"\n";
    return 0;
}
