#include<iostream>
#include<bits/stdc++.h>
#define int long long 
using namespace std;
int subtree[1000000];
int level[1000000];
void dfs(int node, int par, vector<int> adj[],int lev)
{
    subtree[node]= 1;
    level[node]=lev;
    for(auto it : adj[node])
    {
        if(it!=par)
        {
            dfs(it,node,adj,lev+1);
            subtree[node] += subtree[it];
        }
    }
    return;
}
signed main()
{
    int n,k,i,u,v;
    cin>>n>>k;
    vector<int> adj[n+1];
    for(i=0;i<n-1;i++)
    {
        cin>>u>>v;
        adj[u].emplace_back(v);
        adj[v].emplace_back(u);
    }
    dfs(1,-1,adj,1);
    vector<int> contri;
    for(i=1;i<=n;i++)
    {
        contri.emplace_back(level[i]-subtree[i]);
    }
    sort(contri.begin(),contri.end(),greater<int>());
    int ans=0;
    for(i=0;i<k;i++)
    {
        ans += contri[i];
    }
    cout<<ans<<"\n";
    return 0;
}
