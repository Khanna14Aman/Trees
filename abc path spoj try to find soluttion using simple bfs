//question==>https://www.spoj.com/problems/ABCPATH/
#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int maxi = 0;
int dx[] = {-1,-1,0,1,1,1,0,-1};
int dy[] = {0,1,1,1,0,-1,-1,-1};
char ch[51][51];
int t=0,dist[51][51]={0},r,c;
void dfs(int i, int j, int d)
{
    int ind,newi,newj;
    for(ind=0;ind<8;ind++)
    {
        newi = i+dx[ind];
        newj = j+dy[ind];
        if(newi>=0 && newi<r && newj>=0 && newj<c && ch[newi][newj]==ch[i][j]+1 && dist[newi][newj]<d)
        {
            dist[newi][newj]=d+1;
            dfs(newi,newj,dist[newi][newj]);
        }
    }
    return ;
}
int main()
{
    while(1)
    {
        cin>>r>>c;
        if(r==0 || c==0)
        {
            break;
        }
        t++;
        int i,j;
        for(i=0;i<r;i++)
        {
            cin>>ch[i];
            for(j=0;j<c;j++)
            {
                dist[i][j]=0;
            }
        }
        for(i=0;i<r;i++)
        {
            for(j=0;j<c;j++)
            {
                if(ch[i][j]=='A' && dist[i][j]==0)
                {
                    dist[i][j]=1;
                    dfs(i,j,1);
                }
            }
        }
        maxi = dist[0][0];
        for(i=0;i<r;i++)
        {
            for(j=0;j<c;j++)
            {
                if(dist[i][j]>maxi)
                {
                    maxi = dist[i][j];
                }
            }
        }
        cout<<"Case "<<t<<": "<<maxi<<"\n";
        
    }
    return 0;
}




bfs solution try to find difference why this code is not working===:


#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int maxi = 0;
int dx[] = {-1,-1,0,1,1,1,0,-1};
int dy[] = {0,1,1,1,0,-1,-1,-1};
struct node
{
    int i,j,count;
    node(int _i, int _j, int _count)
    {
        i = _i;
        j = _j;
        count = _count;
    }
};
void bfs(int h, int w)
{
    char vec[h][w];
    int i,j;
    for(i=0;i<h;i++)
    {
        for(j=0;j<w;j++)
        {
            cin>>vec[i][j];
            //cout<<vec[i][j];
        }
    }
    int flag=0;
    for(i=0;i<h;i++)
    {
        for(j=0;j<w;j++)
        {
            if(vec[i][j]=='A')
            {
                flag=1;
                queue<node>q;
                int alpha = 65;
                int count;
                q.push(node(i,j,1));
                vector<vector<int>>v(h,vector<int>(w,0));
                while(!q.empty())
                {
                    int ind;
                    int i = q.front().i;
                    int j = q.front().j;
                    count = q.front().count;
                    for(ind = 0;ind<8;ind++)
                    {
                        int newi = i+dx[ind];
                        int newj = j+dy[ind];
                        if(newi>=0 && newj>=0 && newi<h && newj<w && vec[newi][newj]==(char)(alpha+1) && v[newi][newj]!=1)
                        {
                            v[i][j]=1;
                            alpha = alpha+1;
                            q.push(node(newi,newj,count+1));
                            break;
                        }
                    }
                    q.pop();
                }
                maxi = max(maxi,count);
            }
        }
    }
    if(flag==0)
    {
        maxi = 0;
    }
    return;
}
signed main()
{
    int k=0;
    while(1)
    {
        int h,w;
        cin>>h>>w;
        if(h==0 || w==0)
        {
            break;
        }
        maxi=0;
        k++;
        bfs(h,w);
        cout<<"Case "<<k<<": "<<maxi<<"\n";
        
    }
    return 0;
}
